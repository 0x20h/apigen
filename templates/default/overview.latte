{layout '@layout.latte'}
{var $overview => true}

{block #title}{$config->title ?: 'Overview'}{/block}

{block #content}
<div id="navigation">
	<ul>
		<li class="active"><span>Overview</span></li>
		<li n:if="$packages"><span>Package</span></li>
		<li n:if="$namespaces"><span>Namespace</span></li>
		<li><span>Class</span></li>
	</ul>
	<ul>
		<li><a href="tree.html" title="Tree view of classes, interfaces and exceptions"><span>Tree</span></a></li>
		<li n:if="$deprecated"><a href="deprecated.html" title="List of deprecated elements"><span>Deprecated</span></a></li>
		<li n:if="$todo"><a href="todo.html" title="Todo list"><span>Todo</span></a></li>
	</ul>
</div>

<div id="content">
	<h1>{include #title}</h1>

	<table class="summary" id="packages" n:if="$packages">
	<caption>Packages summary</caption>
	{foreach $packages as $package}
	<tr>
		<td><a href="{$package|packageUrl}">{$package ?: 'None'}</a></td>
	</tr>
	{/foreach}
	</table>

	<table class="summary" id="namespaces" n:if="$namespaces">
	<caption>Namespaces summary</caption>
	{foreach $namespaces as $namespace}
	<tr>
		<td><a href="{$namespace|namespaceUrl}">{$namespace ?: 'None'}</a></td>
	</tr>
	{/foreach}
	</table>

	{if !$packages && !$namespaces}
	{include '@classlist.latte'}
	{/if}
</div>
{/block}